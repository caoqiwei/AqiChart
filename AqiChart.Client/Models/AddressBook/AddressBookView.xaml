<UserControl x:Class="AqiChart.Client.Models.AddressBook.AddressBookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:local="clr-namespace:AqiChart.Client.Models.AddressBook" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <!-- 列表项样式 -->
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!-- 颜色资源 -->
        <Color x:Key="Green">#07C160</Color>
        <Color x:Key="Gray">#F7F7F7</Color>
        <Color x:Key="DarkGray">#EDEDED</Color>
        <Color x:Key="TextGray">#888888</Color>
        <Color x:Key="TextDark">#000000</Color>
        <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource Green}"/>
        <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource Gray}"/>
        <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGray}"/>
        <SolidColorBrush x:Key="TextGrayBrush" Color="{StaticResource TextGray}"/>
        <SolidColorBrush x:Key="TextDarkBrush" Color="{StaticResource TextDark}"/>
        <!-- 样式 -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextGrayBrush}"/>
            <Setter Property="Margin" Value="15,20,0,10"/>
        </Style>

        <Style x:Key="InfoItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource GrayBrush}"/>
        </Style>

    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="68" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border BorderBrush="#DADADA" BorderThickness="0 0 1 1" Background="#F7F7F7">
                <Grid Margin="0 0 0 10" VerticalAlignment="Bottom" >
                    <TextBox Grid.Column="0" Foreground="Black" Margin="10 0" Width="auto"
                     VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="30" 
                     Text="{Binding SearchText}"
                     Template="{StaticResource SearchTextBoxTemplate}" Tag="搜索..." ></TextBox>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="#F3F3F3" BorderBrush="#DADADA" BorderThickness="0 0 1 0">

                <!-- 联系人列表 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding UserGroups}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander Style="{StaticResource AnimatedExpander}" Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                  IsExpanded="{Binding IsExpanded}" Header="{Binding Title}">
                                    <Expander.Content>
                                        <ListView ItemsSource="{Binding SubItems }" BorderThickness="0" x:Name="SubItemsListView"
                                            SelectedItem="{Binding SelectdItem}"
                                            cal:Message.Attach="[Event SelectionChanged]=[Action SelectdItem($dataContext, $source)]">
                                            
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0 5" Width="205" Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="55" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="40" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="5">
                                                            <Image Source="{Binding AvatarUrl}"></Image>
                                                        </Grid>

                                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding NickName}" Foreground="#10141A" VerticalAlignment="Center" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"></TextBlock>
                                                        <!--<TextBlock Grid.Row="0" Grid.Column="3" Text="09:36" Foreground="#9093A3" VerticalAlignment="Center" TextAlignment="Center"></TextBlock>
                                                        <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="When Recipe Save As, the original recipe name is displayed in the input box." 
                                                        TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Foreground="#9093A3" VerticalAlignment="Center"></TextBlock>-->
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Expander.Content>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <ItemsControl.Template>
                            <ControlTemplate>
                                <ItemsPresenter/>
                            </ControlTemplate>
                        </ItemsControl.Template>
                    </ItemsControl>
                </ScrollViewer>
                
            </Border>

        </Grid>

        <Grid Grid.Column="1" Background="White">

            <StackPanel Width="400" Margin="0 50 0 0" Visibility="{Binding IsSelectUser, Converter={StaticResource BoolToVisibilityConverter}}" >
                <!-- 顶部信息卡片 -->
                <Border Background="White" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 头像 -->
                        <Border Grid.Column="0" Width="70" Height="70" 
                                Margin="15,15,15,15" CornerRadius="8">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding SelectedUser.AvatarUrl}"/>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
                            </Border.Effect>
                        </Border>

                        <!-- 基本信息 -->
                        <StackPanel Grid.Column="1" Margin="0,15,15,15" VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedUser.NickName}" FontSize="22" FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>

                            <!--<StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="昵称：" Foreground="{StaticResource TextGrayBrush}"/>
                                <TextBlock Text="小美"/>
                            </StackPanel>-->

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="用户名：" Foreground="{StaticResource TextGrayBrush}"/>
                                <TextBlock Text="{Binding SelectedUser.UserName}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="手机：" Foreground="{StaticResource TextGrayBrush}"/>
                                <TextBlock Text="{Binding SelectedUser.Phone}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="邮箱：" Foreground="{StaticResource TextGrayBrush}"/>
                                <TextBlock Text="{Binding SelectedUser.Email}"/>
                            </StackPanel>

                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 更多信息 -->
                <TextBlock Text="个性签名" Style="{StaticResource SectionHeaderStyle}"/>

                <Border Style="{StaticResource InfoItemStyle}" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="只有努力奋斗才会让自己强大起来"
                                   VerticalAlignment="Center" Margin="15,0,15,0"
                                   Foreground="{StaticResource TextGrayBrush}"
                                   TextWrapping="Wrap"/>
                    </Grid>
                </Border>

                <Border Visibility="{Binding IsFriend, Converter={StaticResource BoolToVisibilityConverter}}" Style="{StaticResource InfoItemStyle}" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>

                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0 0 20 0">
                            <Button Grid.Row="0" Grid.Column="2" Content="同意" cal:Message.Attach="ThroughFriend()" 
                                Style="{StaticResource BtnStyle}" Width="70" Height="30" Margin="20 0"></Button>
                            <Button Grid.Row="0" Grid.Column="2" Content="拒绝" cal:Message.Attach="RejectFriend()" 
                                Style="{StaticResource BtnStyle}" Background="Red" Width="70" Height="30" Margin="20 0"></Button>
                        </StackPanel>

                    </Grid>
                </Border>

            </StackPanel>

        </Grid>

    </Grid>
</UserControl>
