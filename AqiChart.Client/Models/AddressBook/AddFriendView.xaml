        Title="添加好友" Height="630" Width="430" WindowStyle="None" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        AllowsTransparency="True" Background="{x:Null}" Style="{StaticResource WindowStyle}">
