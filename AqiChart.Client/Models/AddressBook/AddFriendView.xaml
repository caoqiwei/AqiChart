    </Window.Resources>
    <Border Background="White" BorderThickness="1" BorderBrush="#33cccccc">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border CornerRadius="10,10,0,0" MouseLeftButtonDown="Border_MouseLeftButtonDown" Background="Transparent">
                <TextBlock Text="添加好友" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"  />
            </Border>
            <Button WindowChrome.IsHitTestVisibleInChrome="True" VerticalAlignment="Top" HorizontalAlignment="Right" Content="&#xe04C;" 
                    Style="{StaticResource SystemCloseBtnStyle}"
                    cal:Message.Attach="CloseView()" />

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition  />
                </Grid.RowDefinitions>
                <Grid Margin="20,20,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Foreground="Black" Margin="0 0 5 0"
                        Text="{Binding SearchText}" 
                        VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="35" 
                        Template="{StaticResource SearchTextBoxTemplate}" Tag="搜索..." ></TextBox>
                    <Button Grid.Column="1" Content="搜索" cal:Message.Attach="SearchFriend()" Style="{StaticResource BtnStyle}" 
                        Width="86" Height="35" ></Button>
                    
                </Grid>
                <Grid Grid.Row="1">
                    <ListView ItemsSource="{Binding FriendList}" BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="55" />
                                        <ColumnDefinition Width="270" />
                                        <ColumnDefinition Width="90" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="0" Grid.Column="0" Margin="5">
                                        <Image Source="{Binding AvatarUrl}"></Image>
                                    </Grid>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding NickName}" Foreground="#10141A" VerticalAlignment="Center" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"></TextBlock>
                                    <Button Grid.Row="0" Grid.Column="2" Content="加好友" cal:Message.Attach="AddFriend($dataContext)" 
                                            Style="{StaticResource BtnStyle}" Width="70" Height="30" ></Button>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>
                    
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
