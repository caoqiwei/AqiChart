<UserControl x:Class="AqiChart.Client.Models.Chat.ChatManageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:local="clr-namespace:AqiChart.Client.Models.Chat" 
             xmlns:conv="clr-namespace:AqiChart.Client.Data"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <conv:NumberMessageTipConverter x:Key="NumberMessageTipConverter" />

        <!-- 列表项样式 -->
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="68" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border BorderBrush="#DADADA" BorderThickness="0 0 1 1" Background="#F7F7F7">
                <Grid Margin="0 0 8 10" VerticalAlignment="Bottom" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Foreground="Black" Margin="10 0" Width="auto"
                         VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="30" 
                         Text="{Binding SearchText}"
                         Template="{StaticResource SearchTextBoxTemplate}" Tag="搜索..." ></TextBox>

                    <Button Grid.Column="1" cal:Message.Attach="AddFriend()" Content="&#xe489;" Width="26" Height="26"></Button>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="#F3F3F3" BorderBrush="#DADADA" BorderThickness="0 0 1 0">

                <!--
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                -->
                <ListView ItemsSource="{Binding FriendList }" SelectedItem="{Binding SelectedFriend}" BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0 5" Width="205">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="55" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="40" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="5">
                                    <Image Source="{Binding AvatarUrl}"></Image>
                                    <Border Visibility="{Binding ChartCount,Converter={StaticResource NumberMessageTipConverter}}" 
                                            HorizontalAlignment="Right" VerticalAlignment="Top" Background="Red" CornerRadius="10" Width="15" Height="15" Margin="2" >
                                        <TextBlock Text="{Binding ChartCount}" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFFFFF" />
                                    </Border>
                                </Grid>
                                
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding NickName}" Foreground="#10141A" VerticalAlignment="Center" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"></TextBlock>
                                <!--<TextBlock Grid.Row="0" Grid.Column="3" Text="09:36" Foreground="#9093A3" VerticalAlignment="Center" TextAlignment="Center"></TextBlock>
                                <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="When Recipe Save As, the original recipe name is displayed in the input box." 
                                        TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Foreground="#9093A3" VerticalAlignment="Center"></TextBlock>-->
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </Border>

        </Grid>

        <Grid Grid.Column="1" Background="White">
            <ContentControl x:Name="ActiveItem" cal:View.Model="{Binding ActiveItem}" Margin="0"  />
        </Grid>

    </Grid>
</UserControl>
